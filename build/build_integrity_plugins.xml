<?xml version="1.0" encoding="UTF-8"?>
<project default="plugin_export" name="Integrity Test Framework">
	<target name="clean-all">
		<delete dir="build" quiet="false" failonerror="true"/>
	</target>
	
	<target name="plugin_export" depends="clean-all">
		<pde.exportPlugins destination="build" exportSource="true" exportType="directory" plugins="de.gebit.integrity.dsl,de.gebit.integrity.dsl.ui,de.gebit.integrity.runner,de.gebit.integrity.remoting,de.gebit.integrity.eclipse" useJARFormat="true"/>
	</target>
</project>
